{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Kestrel": {
        "Limits": {
            "KeepAliveTimeout": 300 // 300 seconds = 5 minutes
        }
    },
    "AllowedHosts": "*",
    "DataConnection": {
        "Provider": "",
        "ConnectionString": ""
    },
    "JwtConfig": {
        "Key": "your-secret-key-here",
        "Issuer": "your-app",
        "Audience": "your-audience",
        "AccessTokenExpiryMinutes": 60,
        "RefreshTokenExpiryDays": 7
    },
    "KeepAlive": {
        "Url": "https://yourdomain.com/api/keepalive",
        "IntervalMinutes": 5
    }
}
